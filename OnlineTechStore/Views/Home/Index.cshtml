<input type="text" id="SearchText" class="form form-control" placeholder=" Search . . ." />
<br>

<div class="container">
    <div class="row w-100">
        @foreach (var item in Model)
        {
            <div style="text-align:center" class="col-3 m-4 mx-auto itemSearch">
                <a href="Product/CustomerIndex/@item.ID">
                    <img class="img-fluid img-thumbnail rounded" src="~/Content/images/@item.Thumbnail" style="height:15vw">
                    <span>@item.Name</span>
                </a>
            </div>
        }
    </div>
</div>
<br />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
    $("#SearchText").on("keyup", function () {
        var name = $(this).val();
        $(".itemSearch").each(function (results) {
            if (results >= 0) {
                var id = $(this).find("span").text();
                if (id.indexOf(name) !== 0 && id.toLocaleLowerCase().indexOf(name.toLocaleLowerCase()) < 0) {
                    $(this).hide();
                }
                else {
                    $(this).show();
                }
            }
        })
    });
</script>




